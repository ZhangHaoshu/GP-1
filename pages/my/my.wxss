/* pages/my/my.wxss */
.login-container {
    height: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #f8f8f8;
    position: relative;
    overflow: hidden;
}
.login-container image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.login-container button {
    width: 60%;
    border-radius: 100rpx;
    margin: 30px 0;
    background-color: #94c0d3;
}

.userinfo-container{
    text-align: center;
    height: 550rpx;
    background-color: #f4f4f4;
}

.top-box {
    height: 500rpx;
    background-color: #f4f4f4;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    border: 2px solid white;
    
}
.matter-view {
    position: absolute;
    width: 100%;  
    height: 600rpx;  
    top: 0;   
    left: 0;   
    background-color: #000;   
    opacity: 0.2;
    filter: alpha(opacity=10); 
  }

.nickname{
    margin-top: 15rpx;
    font-size: 16px;
    font-weight: bold;
}


.panel-list-item {
    height: 45px;
    display: flex;
    background-color: white;
    justify-content: space-between;
    align-items: center;
    font-size: 15px;
    padding: 0 10px;
    border-bottom: 1px solid #cccccc;
    border-radius: 50px;
    margin-top: 10px;
}

.panel-list-item text {
   margin-right: 190px;
   font-weight: 500;
   font-size: 18px;
}

.van_icon {
    height: 45px;
    width: 45px;
}
.my-button{
    border: none;
    background-color: white;
    border-radius:0;
    height: 45px;
    width: 82%;
    text-align: left;
  }

  button::after {
    border: none;
  }